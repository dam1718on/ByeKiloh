<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.K_Ejercicios_Update">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="EJERCICIOS UPDATE"
            android:textColor="@color/naranja"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edittext_solid_orange"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:text="SPINNER CON TODOS LOS EJERCICIOS GUARDADOS:"
                android:textColor="@color/azuloscuro"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinEjerciciosU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:spinnerMode="dialog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:text="EJERCICIO SELECCIONADO:"
                android:textColor="@color/azuloscuro"
                android:textSize="10sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFechaU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789"
                android:hint="fecha  [YYMMDD]"
                android:maxLength="6"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/naranjaflojo"
                android:textColorHint="@color/azuloscuro"
                android:textSize="15.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDistanciaU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789"
                android:hint="distancia  [metros]"
                android:maxLength="5"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/naranjaflojo"
                android:textColorHint="@color/azuloscuro"
                android:textSize="15.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTiempoU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789"
                android:hint="tiempo  [minutos]"
                android:maxLength="3"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/naranjaflojo"
                android:textColorHint="@color/azuloscuro"
                android:textSize="15.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etInclinacionU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits=",0123456789"
                android:hint="inclinaciÃ³n"
                android:maxLength="4"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/naranjaflojo"
                android:textColorHint="@color/azuloscuro"
                android:textSize="15.5sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnActualizarEjercicioU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_gradient_blue"
                android:text="ACTUALIZAR\nEJERCICIO"
                android:textStyle="bold"
                style="@style/shadoweffect" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>