<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/platino"
    android:orientation="vertical"
    tools:context=".EjercicioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button_gradient_orange">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:background="@drawable/byekilohlogobyn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="- Ejercicio -"
            android:textColor="@color/azuloscuro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="160dp"
            android:layout_height="41dp"
            android:layout_marginTop="33dp"
            android:layout_gravity="center"
            android:text="CREATE"
            android:background="@drawable/rounded_button_gradient_blue"
            android:textStyle="bold"
            style="@style/shadoweffect" />

        <Button
            android:layout_width="160dp"
            android:layout_height="41dp"
            android:layout_marginTop="33dp"
            android:layout_gravity="center"
            android:text="READ"
            android:background="@drawable/rounded_button_gradient_blue"
            android:textStyle="bold"
            style="@style/shadoweffect" />

        <Button
            android:layout_width="160dp"
            android:layout_height="41dp"
            android:layout_marginTop="33dp"
            android:layout_gravity="center"
            android:text="UPDATE"
            android:background="@drawable/rounded_button_gradient_blue"
            android:textStyle="bold"
            style="@style/shadoweffect" />

        <Button
            android:layout_width="160dp"
            android:layout_height="41dp"
            android:layout_marginTop="33dp"
            android:layout_gravity="center"
            android:text="DELETE"
            android:background="@drawable/rounded_button_gradient_blue"
            android:textStyle="bold"
            style="@style/shadoweffect" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVolverAlMain2"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_button_gradient_orange"
            android:text="VOLVER\nAL MAIN"
            android:textStyle="bold"
            style="@style/shadoweffect" />

        <Button
            android:id="@+id/btnXXX"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/rounded_button_gradient_orange"
            android:text="XXX\nXXX"
            android:textStyle="bold"
            style="@style/shadoweffect" />

    </LinearLayout>

</LinearLayout>