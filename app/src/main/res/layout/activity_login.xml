<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/platino"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="244px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/rounded_box_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_gravity="center"
            android:background="@drawable/byekilohlogobyn">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="710px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="- Login -"
            android:textColor="@color/azuloscuro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="640px"
            android:layout_height="100px"
            android:layout_marginTop="120px"
            android:layout_gravity="center"
            android:background="@drawable/rounded_box_edittext"
            android:digits="0123456789abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZáéíó
            úÁÉÍÓÚäëïöüÄËÏÖÜ"
            android:drawableLeft="@drawable/ic_usuario"
            android:drawablePadding="-44dp"
            android:hint="Usuario"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="20px"
            android:textAlignment="center"
            android:textColor="@color/azuloscuro"
            android:textColorHint="@color/naranjaflojo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="640px"
            android:layout_height="100px"
            android:layout_marginTop="120px"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/rounded_box_edittext"
                android:digits="-_.:;,@0123456789abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVW
                XYZáéíóúÁÉÍÓÚäëïöüÄËÏÖÜ"
                android:drawableLeft="@drawable/ic_candado"
                android:drawablePadding="-44dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="20px"
                android:textAlignment="center"
                android:textColor="@color/azuloscuro"
                android:textColorHint="@color/naranjaflojo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgPassL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_visible_no" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/cbMantenerSesion"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_marginTop="60px"
            android:layout_gravity="center"
            android:buttonTint="@color/naranjaflojo"
            android:text="Mantener sesión iniciada"
            android:textColor="@color/naranjaflojo"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142px"
        android:orientation="horizontal">

            <Button
                android:id="@+id/btnCrearCuenta"
                android:layout_width="240px"
                android:layout_height="122px"
                android:layout_marginLeft="40px"
                android:background="@drawable/rounded_box_button"
                android:text="CREAR\nCUENTA"
                android:textStyle="bold"
                style="@style/shadoweffect" />

            <Button
                android:id="@+id/btnIniciarSesion"
                android:layout_width="240px"
                android:layout_height="122px"
                android:layout_marginLeft="160px"
                android:background="@drawable/rounded_box_button"
                android:text="INICIAR\nSESION"
                android:textStyle="bold"
                style="@style/shadoweffect" />

    </LinearLayout>

</LinearLayout>