<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_registro50y720x1280"
    android:orientation="vertical"
    tools:context=".activitys.B_Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="REGISTRO"
            android:textSize="17sp"
            style="@style/shadow5TV17spAnoHint" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="320dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:background="@drawable/rounded_edittext_solid_orange"
            android:digits="0123456789abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZáéíó
            úÁÉÍÓÚäëïöüÄËÏÖÜ"
            android:drawableLeft="@drawable/ic_usuario"
            android:drawablePadding="-2dp"
            android:hint="Usuario (ej. RaulRunner88)"
            android:inputType=""
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            style="@style/shadow5ET20sp"/>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etContrasena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/rounded_edittext_solid_orange"
                android:digits="-_.:;,@0123456789abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVW
                XYZáéíóúÁÉÍÓÚäëïöüÄËÏÖÜ"
                android:drawableLeft="@drawable/ic_candado"
                android:drawablePadding="-32dp"
                android:hint="Contraseña(ej. 12bFe@-5)"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:textSize="19sp"
                style="@style/shadow5ET20sp" />

            <ImageView
                android:id="@+id/imgPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_visible_no" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etContrasenaRe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/rounded_edittext_solid_orange"
                android:digits="-_.:;,@0123456789abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVW
                XYZáéíóúÁÉÍÓÚäëïöüÄËÏÖÜ"
                android:drawableLeft="@drawable/ic_candado"
                android:drawablePadding="-32dp"
                android:hint="Confirmar Contraseña"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:textSize="19sp"
                style="@style/shadow5ET20sp" />

            <ImageView
                android:id="@+id/imgPassRe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_visible_no" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbAcepto"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:buttonTint="@color/naranjaflojo"
                android:text="Acepto los"
                android:textSize="15sp"
                style="@style/shadow5ET20sp" />

            <TextView
                android:id="@+id/tvCondicionesServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Términos y Condiciones"
                android:textColor="@color/naranja"
                android:textSize="15sp"
                style="@style/shadow5ET20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="y la"
                android:textSize="15sp"
                style="@style/shadow5ET20sp" />

            <TextView
                android:id="@+id/tvPoliticaPrivacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Política de privacidad"
                android:textColor="@color/naranja"
                android:textSize="15sp"
                style="@style/shadow5ET20sp" />

            <TextView
                android:id="@+id/tvTexto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="de byekiloh"
                android:textSize="15sp"
                style="@style/shadow5ET20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnVolverALogin"
                style="@style/shadoweffect"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_gradient_orange"
                android:text="VOLVER\nAL LOGIN"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnIniciarSesion"
                style="@style/shadoweffect"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_gradient_orange"
                android:text="GUARDAR\nUSUARIO"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>