<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login50y720x1280"
    android:orientation="vertical"
    tools:context=".activitys.A_Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="LOGIN"
            style="@style/shadow5TV17spAnoHint" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext_solid_orange"
            android:digits="0123456789abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZáéíó
            úÁÉÍÓÚäëïöüÄËÏÖÜ"
            android:drawableLeft="@drawable/ic_usuario"
            android:drawablePadding="-44dp"
            android:hint="Usuario"
            android:inputType=""
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            style="@style/shadow5ET20sp" />

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/rounded_edittext_solid_orange"
                android:digits="-_.:;,@0123456789abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVW
                XYZáéíóúÁÉÍÓÚäëïöüÄËÏÖÜ"
                android:drawableLeft="@drawable/ic_candado"
                android:drawablePadding="-44dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                style="@style/shadow5ET20sp" />

            <ImageView
                android:id="@+id/imgPassL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_visible_no" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvRehacerPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="22dp"
            android:text="Ha olvidado la contraseña?"
            android:textAlignment="center"
            android:textSize="13sp"
            style="@style/shadow5TV17spNnoHint" />


        <CheckBox
            android:id="@+id/cbMantenerSesion"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:buttonTint="@color/naranjaflojo"
            android:text="Mantener sesión iniciada"
            android:textSize="18sp"
            style="@style/shadow5ET20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCrearCuenta"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_gradient_orange"
                android:text="CREAR\nCUENTA"
                android:textStyle="bold"
                style="@style/shadoweffect" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnIniciarSesion"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_gradient_orange"
                android:text="INICIAR\nSESION"
                android:textStyle="bold"
                style="@style/shadoweffect" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>